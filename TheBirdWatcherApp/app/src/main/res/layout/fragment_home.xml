<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="197dp"
        android:layout_height="223dp"
        android:layout_marginTop="128dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bird_glossary_button" />

    <Button
        android:id="@+id/add_bird_button"
        android:layout_width="409dp"
        android:layout_height="65dp"
        android:onClick="onAddBird"
        android:text="@string/add_bird"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/remove_bird_button"
        android:layout_width="409dp"
        android:layout_height="70dp"
        android:text="@string/remove_bird"
        android:onClick="onRemoveBird"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_bird_button" />



    <Button
        android:id="@+id/bird_glossary_button"
        android:layout_width="409dp"
        android:layout_height="69dp"
        android:text="@string/bird_glossary"
        android:onClick="onOpenGlossary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_bird_button" />

</androidx.constraintlayout.widget.ConstraintLayout>